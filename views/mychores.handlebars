<!DOCTYPE html>
<html>
  <head>
    <title>My Chores</title>
    {{> styles }}
  </head>
  <body>
	<!-- this is a comment in HTML -->
  {{> navbar }}
	<div class="container">
    <div class="jumbotron">
      <h1>My Chores</h1>
      {{#if chores }}
      <p>Hi, {{ username }}. You have {{ chores.length }} unfinished chores this week. Get to it!</p>
      {{else}}
      <p>Hi, {{ username }}. Looks like you've finished all your chores this week.</p>
      {{/if}}
    </div>

    <ul class="list-cards">
      {{#each chores }}
      <div class="card-container">
        <div class="card" id="{{id}}">
          <div class="card-contents">
            <div class="card-header">
              <h2 class="card-name">{{name}}</h2>
              <h2 class="card-reward">{{reward}}</h2>
              <img src="http://cliparts.co/cliparts/pT5/oAj/pT5oAjbkc.png" class="gold-img">
              <div style="clear: both;"></div>
            </div>
            
            <img src="{{imageURL}}" width="320" height="320" class="card-img">

            <div class="card-requirements">
              <p class="card-requirements-text">{{requirements}}</p>
            </div>
          </div>
        </div>
      </div>
      <hr>
      {{/each}}
    </ul>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
